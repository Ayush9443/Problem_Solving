class Solution {
public:
    bool checkDivisibility(int n) {
        int num = n;
        int sum = 0;
        int product = 1;
        while (num) {
            int res = num % 10;
            sum += res;
            product *= res;
            num /= 10;
        }
        sum += product;
        if (n % sum == 0)
            return true;
        return false;
    }
};
