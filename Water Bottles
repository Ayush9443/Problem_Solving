class Solution {
public:
    int numWaterBottles(int numBottles, int numExchange) {
        int mB=0;
        int empty=0;
        while(numBottles>0){
            mB+=numBottles;
            empty+=numBottles;
            numBottles=empty/numExchange;
            empty%=numExchange;
        }
        return mB;
    }
};
